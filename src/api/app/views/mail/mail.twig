<div style="font-family:Arial,Helvetica,sans-serif;font-size:12px;color:#000000">
    <div style="width:680px">
        <a href="http://x-vinil.ru/" title="" target="_blank"></a>
        <p style="margin-top:0px;margin-bottom:20px">{{ Title }}</p>
        <table style="border-collapse:collapse;width:100%;border-top:1px solid #dddddd;border-left:1px solid #dddddd;margin-bottom:20px">
            <tbody>
                <tr>
                    <td colspan="2" style="font-size:12px;border-right:1px solid #dddddd;border-bottom:1px solid #dddddd;background-color:#efefef;font-weight:bold;text-align:left;padding:7px;color:#222222">{{ Title }}</td>
                </tr>
            </tbody>
            <tbody>
                <tr>
                    <td style="font-size:12px;border-right:1px solid #dddddd;border-bottom:1px solid #dddddd;text-align:left;padding:7px">
                        {% for param in Parameters %}
                            <p><b>{{ param.name }}:</b> {{ param.value }}</p>
                        {% endfor %}
                    </td>
                </tr>
            </tbody>
        </table>
        {% block addInfo %}
        {% endblock %}
    </div>
</div>
